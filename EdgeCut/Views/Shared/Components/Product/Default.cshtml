@using EdgeCut.Entities
@model List<Product>

@foreach (Product product in Model)
{
    <div class="col-md-6 col-lg-4">
        <div class="box">
            <div class="img-box">
                <img src="~/images/@product.Url" alt="">
            </div>
            <div class="detail-box">
                <h5>
                    @product.Name
                </h5>
                <div class="price_box">
                    <h6 class="price_heading">
                        <span>$</span> @product.Price
                    </h6>
                    <a href="">
                        Buy Now
                    </a>
                </div>
            </div>
        </div>
    </div>
}